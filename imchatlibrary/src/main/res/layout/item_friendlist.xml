<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space55"
    android:background="@color/colorWrite"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_friend_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/space15"
        android:background="@drawable/selector_im_invitee"
        android:visibility="gone" />

        <com.yst.im.imchatlibrary.widget.NineGridImageView
            android:id="@+id/img_friend_list_user_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:background="@color/colorffeeeeee"
            android:padding="@dimen/space3" />

    <TextView
        android:id="@+id/txt_friend_list_user_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:maxEms="8"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/colorBlack222"
        android:textSize="@dimen/text_size_15sp" />

    <TextView
        android:id="@+id/txt_friend_list_group_num"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/space5"
        android:text=""
        android:textColor="@color/colorBlackEB"
        android:textSize="@dimen/text_size_15sp" />

</LinearLayout>