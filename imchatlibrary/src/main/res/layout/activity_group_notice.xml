<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:title="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlackF5"
    android:orientation="vertical"
    tools:context=".ui.activity.GroupNoticeActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space22" />

    <com.yst.im.imchatlibrary.base.baseview.AbstractTitleView
        android:id="@+id/title_group_notice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space44"
        android:background="@color/colorWrite"
        title:left_text="@string/cancle"
        title:left_text_color="@color/colorBlck999"
        title:right_text_color="@color/colorBlue439"
        title:small_text_size="15sp"
        title:title_text_color="@color/colorBlack222"
        title:title_text_size="18sp" />

    <LinearLayout
        android:id="@+id/lil_group_notice_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space78"
        android:layout_marginTop="@dimen/space5"
        android:background="@color/colorWrite"
        android:orientation="horizontal">

        <com.yst.im.imchatlibrary.widget.ImRoundedImageView
            android:id="@+id/img_group_notice_icon"
            android:layout_width="@dimen/space57"
            android:layout_height="@dimen/space57"
            android:layout_gravity="center"
            android:layout_margin="@dimen/space15"
            android:layout_marginTop="24dp"
            android:src="@mipmap/icon_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_group_notice_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlck666"
                android:textSize="@dimen/text_size_15sp" />

            <TextView
                android:id="@+id/txt_group_notice_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space5"
                android:textColor="@color/colorBlck999"
                android:textSize="@dimen/text_size_nomal" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/space2"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/edt_group_notice_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorWrite"
            android:ellipsize="end"
            android:gravity="top"
            android:padding="@dimen/space12"
            android:textSize="@dimen/text_size_nomal" />

        <TextView
            android:id="@+id/txt_group_notice_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/space60"
            android:background="@drawable/icon_group_manager_see"
            android:textColor="@color/colorBlck666"
            android:textSize="@dimen/text_size_15sp" />
    </RelativeLayout>

</LinearLayout>
