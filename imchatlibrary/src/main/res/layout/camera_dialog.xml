<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWrite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_camera"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space50"
        android:gravity="center"
        android:text="@string/mine_setting_camera"
        android:textSize="@dimen/space16"
        android:textColor="@color/colorff333333"
        />

    <View
        android:background="@color/colorffd7d7d7"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space0.5"/>

    <TextView
        android:id="@+id/tv_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space50"
        android:gravity="center"
        android:text="@string/mine_setting_photo"
        android:textSize="@dimen/space16"
        android:textColor="@color/colorff333333"
        />
    <View
        android:background="@color/colorffd7d7d7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space8"/>
    <TextView
        android:id="@+id/tv_cancle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space50"
        android:gravity="center"
        android:text="@string/mine_setting_cancle"
        android:textSize="@dimen/space16"
        android:textColor="@color/colorff333333"
        />
</LinearLayout>