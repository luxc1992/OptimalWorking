<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_itemtype"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space30"
        android:background="@color/colorBlackF5"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space15"
        android:text="@string/txt_groupChat_otherGroup"
        android:textColor="@color/colorBlck999"
        android:textSize="@dimen/text_size_small" />

    <LinearLayout
        android:id="@+id/llayout_group_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/space0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_item_group_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space15"
                android:layout_marginTop="@dimen/space15"
                android:text="标题"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_xxlarge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space5"
                android:layout_marginTop="@dimen/space10"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_item_group_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space15"
                    android:background="@drawable/btn_im_shape_width"
                    android:paddingLeft="@dimen/space5"
                    android:paddingRight="@dimen/space5"
                    android:padding="@dimen/space3"
                    android:text="互联网"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space50"
                    android:text="@string/txt_groupChat_joinPerson" />

                <TextView
                    android:id="@+id/txt_item_group_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/txt_item_group_joinOrExit"
            android:layout_width="@dimen/space63"
            android:layout_height="@dimen/space30"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/space10"
            android:background="@drawable/btn_im_shape_apply"
            android:focusable="false"
            android:textSize="@dimen/text_size_nomal" />
    </LinearLayout>


</LinearLayout>