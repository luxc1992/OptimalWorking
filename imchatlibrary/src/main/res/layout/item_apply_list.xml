<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space10"
    android:background="@color/colorWrite"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >
    <ImageView
        android:id="@+id/img_apply_icon"
        android:layout_width="@dimen/space60"
        android:layout_height="@dimen/space60"
        android:background="@color/colorffeeeeee"
        android:padding="@dimen/space3"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/space10"
        >
        <TextView
            android:id="@+id/txt_apply_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorff0b0b0b"
            android:textSize="@dimen/text_size_14sp"
            android:singleLine="true"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/txt_apply_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorff8b8b8b"
            android:textSize="@dimen/text_size_nomal"
            android:layout_marginTop="@dimen/space3"
            android:singleLine="true"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/txt_apply_group_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorff8b8b8b"
            android:textSize="@dimen/text_size_small"
            android:singleLine="true"
            android:ellipsize="end"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space10"
        >
        <LinearLayout
            android:id="@+id/ll_set_apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|right"
            android:layout_alignParentRight="true"
            >
            <TextView
                android:id="@+id/txt_sure_apply"
                android:layout_width="@dimen/space55"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_shape_width_blue"
                android:text="同意"
                android:textColor="@color/colorWrite"
                android:textSize="@dimen/text_size_nomal"
                android:gravity="center"
                android:padding="@dimen/space8"
                />
            <TextView
                android:id="@+id/txt_no_apply"
                android:layout_width="@dimen/space55"
                android:layout_height="wrap_content"
                android:text="拒绝"
                android:textColor="@color/colorWrite"
                android:textSize="@dimen/text_size_nomal"
                android:gravity="center"
                android:padding="@dimen/space8"
                android:layout_marginLeft="@dimen/space10"
                android:background="@drawable/btn_shape_width_thin_blue"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_apply_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="已同意"
            android:textColor="@color/colorff9494942"
            android:textSize="@dimen/text_size_nomal"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</LinearLayout>
