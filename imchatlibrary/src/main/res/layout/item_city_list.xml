<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWrite">

    <TextView
        android:id="@+id/txt_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingBottom="@dimen/space14"
        android:paddingLeft="@dimen/space12"
        android:paddingTop="@dimen/space14"
        android:text="好友名"
        android:textColor="@color/colorBlck666"
        android:textSize="@dimen/text_size_nomal" />

    <ImageView
        android:id="@+id/img_city_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/space12"
        android:src="@mipmap/item_right_allow"/>

</RelativeLayout>