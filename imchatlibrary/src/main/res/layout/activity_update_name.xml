<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:title="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorffeeeeee"
    android:orientation="vertical"
    tools:context=".ui.activity.UpdateNameActivity">

    <com.yst.im.imchatlibrary.base.baseview.AbstractTitleView
        android:id="@+id/titleview_group_setting_name_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space59"
        android:background="@color/colorWrite"
        title:left_text="取消"
        title:right_text="发送"
        title:right_text_color="@color/colorff999999"
        title:left_text_color="@color/colorff999999"
        title:small_text_size="@dimen/text_size_14sp"

        title:title_text_color="@color/colorBlack333"
        title:title_text_size="@dimen/text_size_xlarge" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space0.5"
        android:background="@color/colorffd7d7d7" />

    <TextView
        android:id="@+id/txt_setting_tips_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space50"
        android:background="@color/colorfff1f0f7"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space15"
        android:paddingRight="@dimen/space15"
        android:text="@string/txt_group_name"
        android:textColor="@color/colorBlue439"
        android:textSize="@dimen/space14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space0.5"
        android:background="@color/colorffd7d7d7" />

    <com.yst.im.imchatlibrary.widget.ClearEditText
        android:id="@+id/edt_group_setting_name_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space50"
        android:background="@color/colorWrite"
        android:gravity="center_vertical"
        android:hint="@string/txt_group_hint_name"
        android:maxLength="16"
        android:paddingLeft="@dimen/space10"
        android:paddingRight="@dimen/space10"
        android:singleLine="true"
        android:textColor="@color/colorBlck666"
        android:textColorHint="@color/colorBlck666"
        android:textSize="@dimen/space15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space0.5"
        android:background="@color/colorffd7d7d7" />
</LinearLayout>
