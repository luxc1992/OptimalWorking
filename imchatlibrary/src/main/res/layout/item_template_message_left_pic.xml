<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space120"
    android:id="@+id/lil_news_temp_left"
    android:background="@color/colorWrite"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_temp_left_pic"
        android:layout_width="@dimen/space120"
        android:layout_height="@dimen/space120"
        android:src="@drawable/default_nothing" />

    <LinearLayout
        android:layout_width="@dimen/space0"
        android:layout_height="@dimen/space120"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_temp_left_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space5"
            android:text="这是一条分享消息" />

        <TextView
            android:id="@+id/tv_temp_left_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/space5"
            android:text="分享内容是嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻" />

    </LinearLayout>

</LinearLayout>