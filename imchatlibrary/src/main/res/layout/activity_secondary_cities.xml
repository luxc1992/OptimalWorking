<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:title="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space22"
        android:background="@color/colorWrite"
        />
    <com.yst.im.imchatlibrary.base.baseview.AbstractTitleView
        android:id="@+id/titleView_second_cities_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space59"
        android:background="@color/colorWrite"
        title:left_image="@mipmap/back_title_right"
        title:right_text="完成"
        title:right_text_color="@color/colorBlck999"
        title:small_text_size="@dimen/text_size_14sp"
        title:title_text_color="@color/colorBlack333"
        title:title_text_size="@dimen/text_size_xlarge" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space35"
        android:background="@color/colorBlackEEE"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space13"
        android:text="@string/personal_setting_all"
        android:textColor="@color/colorBlck666"
        android:textSize="@dimen/text_size_small" />

    <ListView
        android:id="@+id/lv_second_cities_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
