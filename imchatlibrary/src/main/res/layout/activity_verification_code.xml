<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:title="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorffeeeeee"
    android:orientation="vertical">

    <com.yst.im.imchatlibrary.base.baseview.AbstractTitleView
        android:id="@+id/titleview_set_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space44"
        android:background="@color/colorWrite"
        title:left_image="@mipmap/back_title_right"
        title:small_text_size="15sp"
        title:title_name="填写验证码"
        title:title_text_color="@color/colorBlack333"
        title:title_text_size="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space0.5"
        android:background="@color/colorffd7d7d7" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space50"
        android:background="@color/colorfff1f0f7"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space15"
        android:paddingRight="@dimen/space15"
        android:text="@string/mine_setting_code_msg"
        android:textColor="@color/colorff999999"
        android:textSize="@dimen/space14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space0.5"
        android:background="@color/colorffd7d7d7" />

    <TextView
        android:id="@+id/txt_my_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space55"
        android:background="@color/colorWrite"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space15"
        android:text=""
        android:textColor="@color/colorff666666"
        android:textSize="@dimen/text_size_15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space0.5"
        android:layout_marginLeft="@dimen/space15"
        android:layout_marginRight="@dimen/space15"
        android:background="@color/colorffd7d7d7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space55"
        android:background="@color/colorWrite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space15"
            android:text="@string/mine_setting_send_msg"
            android:textColor="@color/colorff333333"
            android:textSize="@dimen/text_size_15sp" />

        <com.yst.im.imchatlibrary.widget.ClearEditText
            android:id="@+id/et_update_phone"
            android:layout_width="0dp"
            android:layout_height="@dimen/space50"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/mine_setting_hint_code"
            android:inputType="number"
            android:maxLength="6"
            android:paddingRight="@dimen/space40"
            android:singleLine="true"
            android:textColor="@color/colorBlck666"
            android:textColorHint="@color/colorBlck666"
            android:textSize="@dimen/space15" />

        <RelativeLayout
            android:id="@+id/rel_forg_send_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space10"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/txt_second"
                android:layout_width="@dimen/space50"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space15"
                android:background="@drawable/btn_shape_width_gray"
                android:gravity="center"
                android:padding="@dimen/space5"
                android:text="59s"
                android:textColor="@color/colorWrite"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/txt_send_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space15"
                android:background="@drawable/btn_shape_line_blue"
                android:padding="@dimen/space5"
                android:text="获取验证码"
                android:textColor="@color/colorBlue439"
                android:textSize="@dimen/text_size_14sp"
                />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space0.5"
        android:layout_marginLeft="@dimen/space15"
        android:layout_marginRight="@dimen/space15"
        android:background="@color/colorffd7d7d7" />


    <TextView
        android:id="@+id/txt_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space45"
        android:layout_marginLeft="@dimen/space15"
        android:layout_marginRight="@dimen/space15"
        android:layout_marginTop="@dimen/space180"
        android:background="@drawable/btn_shape_width_gray"
        android:gravity="center"
        android:text="@string/mine_setting_commite"
        android:textColor="@color/colorWrite"
        android:textSize="@dimen/text_size_15sp" />

    <TextView
        android:id="@+id/txt_no_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space10"
        android:text="@string/mine_setting_send_nomsg"
        android:textColor="@color/colorff439eff"
        android:textSize="@dimen/text_size_small" />
</LinearLayout>
