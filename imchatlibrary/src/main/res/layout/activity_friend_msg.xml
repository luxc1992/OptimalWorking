<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:title="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlackF5"
    android:orientation="vertical"
    tools:context=".ui.fragment.FriendMsgFragment">

    <com.yst.im.imchatlibrary.base.baseview.AbstractTitleView
        android:id="@+id/titleView_user_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space44"
        android:background="@drawable/shape_address_book_title"
        title:small_text_size="@dimen/space15"
        title:title_name="标题"
        title:title_text_color="@color/colorWrite"
        title:title_text_size="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space78"
        android:layout_marginTop="@dimen/space15"
        android:background="@color/colorWrite"
        android:orientation="horizontal">

        <com.yst.im.imchatlibrary.widget.ImRoundedImageView
            android:id="@+id/img_user_icon"
            android:layout_width="@dimen/space57"
            android:layout_height="@dimen/space57"
            android:layout_gravity="center"
            android:layout_margin="@dimen/space15"
            android:layout_marginTop="24dp"
            android:src="@mipmap/icon_default" />

        <TextView
            android:id="@+id/txt_user_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="name" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space15"
        android:background="@color/colorWrite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lil_user_portrait"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space44"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/space0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/space15"
                    android:text="头像"
                    android:textColor="@color/colorBlack333"
                    android:textSize="@dimen/text_size_large" />

                <ImageView
                    android:id="@+id/img_user_userIcon_img"
                    android:layout_width="@dimen/space36"
                    android:layout_height="@dimen/space36"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_default" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/space15"
                    android:src="@mipmap/item_right_allow" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space0.5"
                android:background="@color/colorBlackD7" />

            <LinearLayout
                android:id="@+id/lil_user_nickName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space44"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/space15"
                    android:text="昵称"
                    android:textColor="@color/colorBlack333"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/txt_user_NiceName_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorBlack333"
                    android:textSize="@dimen/text_size_large" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/space15"
                    android:src="@mipmap/item_right_allow" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space0.5"
                android:background="@color/colorBlackD7" />

            <LinearLayout
                android:id="@+id/lil_user_sex"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space44"
                android:background="@color/colorWrite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/space15"
                    android:text="性别"
                    android:textColor="@color/colorBlack333"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/txt_user_sex_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorBlack333"
                    android:textSize="@dimen/text_size_large" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/space15"
                    android:src="@mipmap/item_right_allow" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space0.5"
                android:background="@color/colorBlackD7" />

            <LinearLayout
                android:id="@+id/lil_user_region"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space44"
                android:background="@color/colorWrite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/space0"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/space15"
                    android:text="地区"
                    android:textColor="@color/colorBlack333"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/txt_user_region_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorBlack333"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="@dimen/text_size_large" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/space15"
                    android:src="@mipmap/item_right_allow" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lil_user_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space44"
        android:layout_marginTop="@dimen/space15"
        android:background="@color/colorWrite"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/space0"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingLeft="@dimen/space15"
            android:text="设置"
            android:textColor="@color/colorBlack333"
            android:textSize="@dimen/text_size_large" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/space15"
            android:src="@mipmap/item_right_allow" />
    </LinearLayout>

</LinearLayout>