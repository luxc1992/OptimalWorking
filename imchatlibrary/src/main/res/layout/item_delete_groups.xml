<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space55"
    android:background="@color/colorWrite"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_delete_groups_selete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/space15"
        android:background="@drawable/selector_im_invitee"
        android:visibility="gone"
        />

    <com.yst.im.imchatlibrary.widget.NineGridImageView
        android:id="@+id/img_delete_groups_user_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:padding="@dimen/space3"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_default" />


    <TextView
        android:id="@+id/txt_delete_groups_user_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:text=""
        android:textColor="@color/colorBlack222"
        android:textSize="@dimen/text_size_15sp"
        android:maxEms="8"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/txt_delete_groups_group_num"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/space5"
        android:layout_weight="1"
        android:visibility="invisible"
        android:textColor="@color/colorBlck999"
        android:textSize="@dimen/text_size_15sp" />


    <TextView
        android:id="@+id/txt_delete_groups_group_apply"
        android:layout_width="@dimen/space60"
        android:layout_height="@dimen/space30"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/space18"
        android:layout_marginRight="@dimen/space18"
        android:background="@drawable/btn_shape_width_blue"
        android:gravity="center"
        android:text="@string/txt_groupChat_joined"
        android:visibility="gone"
        android:textColor="@color/colorBlackEB"
        android:textSize="@dimen/text_size_15sp" />

</LinearLayout>