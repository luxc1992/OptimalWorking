<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/space250"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_im_white_10"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/space250"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:textSize="@dimen/text_size_xxlarge">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:paddingTop="@dimen/space15"
            android:text="@string/mine_setting_sure_phone"
            android:textColor="@color/colorff222222"
            android:textSize="@dimen/text_size_14sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/yesNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space5"
                android:gravity="center"
                android:maxLines="2"
                android:paddingBottom="@dimen/space10"
                android:paddingTop="@dimen/space10"
                android:text="我们将发送验证码短信"
                android:textColor="@color/colorBlack222"
                android:textSize="@dimen/text_size_small"
                />
            <EditText
                android:id="@+id/edt_pwd_verify"
                android:layout_width="@dimen/space120"
                android:layout_height="@dimen/space25"
                android:background="@drawable/edt_update_phone_bg"
                android:layout_centerInParent="true"
                android:textColorHighlight="@color/colorffaaaaaa"
                android:hint="请输入登录密码"
                android:gravity="center"
                android:textColor="@color/colorffaaaaaa"
                android:textSize="@dimen/space9"
                android:inputType="textPassword"
                android:maxLength="12"
                android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM"
                android:visibility="gone"
                />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space1"
        android:layout_above="@+id/ll_button"
        android:background="@color/colorfff9f9f9" />

    <LinearLayout
        android:id="@+id/ll_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space39"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancle"
            android:layout_width="@dimen/space0"
            android:layout_height="@dimen/space39"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/mine_setting_cancle"
            android:textColor="@color/colorff222222"
            android:textSize="@dimen/text_size_14sp"
            android:visibility="gone" />

        <View
            android:id="@+id/view_line_cancle"
            android:layout_width="@dimen/space1"
            android:layout_height="match_parent"
            android:background="@color/colorfff9f9f9"
            android:visibility="gone" />

        <Button
            android:id="@+id/sure"
            android:layout_width="@dimen/space0"
            android:layout_height="@dimen/space39"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/colorff222222"
            android:textSize="@dimen/text_size_14sp" />
    </LinearLayout>
</LinearLayout>
