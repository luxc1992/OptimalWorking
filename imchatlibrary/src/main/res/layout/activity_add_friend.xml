<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlackF5"
    android:orientation="vertical"
    tools:context=".ui.fragment.AddFriendActivity">

    <include layout="@layout/title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_addfriend_input_userid"
            android:layout_width="@dimen/space0"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space10"
            android:layout_weight="1"
            android:drawableLeft="@drawable/im_contact_list_selected"
            android:drawablePadding="@dimen/space10"
            android:hint="@string/txt_add_frient_input_userid" />

        <Button
            android:id="@+id/btn_addfriend_add"
            android:layout_width="@dimen/space60"
            android:layout_height="@dimen/space40"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/colorBlue"
            android:gravity="center"
            android:text="@string/txt_add_frient_adduserbtn" />
    </LinearLayout>

</LinearLayout>
