<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.yst.onecity.activity.mine.cardbag.CardBagListActivity">

    <include layout="@layout/main_title" />

    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/tablayout_cardbag"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space50"
        android:background="@color/white"
        app:tabTextAppearance="@android:style/TextAppearance.Holo.Large"
        app:xTabSelectedTextColor="@color/color_333333"
        app:xTabTextColor="@color/color_AAAAAA" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_cardbag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />
</LinearLayout>
