<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_F6F6F6"
    >
    <ImageView
        android:id="@+id/iv_share_delete"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:src="@mipmap/delet_green"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        />

    <LinearLayout
        android:id="@+id/ll_share_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/iv_share_delete"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:id="@+id/txt_share_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="马甲线如何养成"
            android:textColor="@color/color_222222"
            android:textStyle="bold"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/txt_share_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="马甲线如何养成马甲线如,何养成马甲线如何养成马如何养成.马甲线如何养成马甲线如何养成。"
            android:textColor="@color/color_222222"
            android:layout_marginTop="12dp"
            android:maxLines="2"
            android:ellipsize="end"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            >
            <ImageView
                android:id="@+id/iv_share_pic1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@mipmap/fyj"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:id="@+id/iv_share_pic2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@mipmap/fyj"
                android:scaleType="centerCrop"
                android:layout_marginLeft="5dp"
                />
            <ImageView
                android:id="@+id/iv_share_pic3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@mipmap/fyj"
                android:scaleType="centerCrop"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_DDDDDD"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/ll_share_content"
        />

</RelativeLayout>