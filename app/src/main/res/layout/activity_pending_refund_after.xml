<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <include
        android:id="@+id/pending_refund_after_title"
        layout="@layout/main_title"/>

    <ScrollView
        android:layout_below="@+id/pending_refund_after_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_FEF2F1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="8dp">

                <ImageView
                    android:id="@+id/iv_return_money"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/tui" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="@string/refund_service"
                    android:textColor="@color/color_333333" />

                <TextView
                    android:id="@+id/pending_refund_after_tv_refund_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="申请退款"
                    android:textColor="@color/color_ED5452" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/x10"
                android:background="@color/white"
                >
                <ImageView
                    android:id="@+id/pending_refund_after_iv_service_img"
                    android:layout_width="@dimen/x70"
                    android:layout_height="@dimen/x70"
                    tools:src="@mipmap/logo"
                    />
                <TextView
                    android:id="@+id/pending_refund_after_tv_service_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="家政保姆"
                    android:layout_marginTop="@dimen/x10"
                    android:layout_marginLeft="@dimen/x10"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/textsize_16"
                    />
            </LinearLayout>
            <!-- 拒绝理由 -->
            <LinearLayout
                android:id="@+id/pending_refund_after_ll_refuse_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x10"
                    android:background="@color/color_F5F5F5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:padding="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/refuse_reason"
                        android:textColor="@color/color_333333" />

                    <TextView
                        android:id="@+id/pending_refund_after_tv_refund_reason"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        tools:text="服务良好，不予退款"
                        android:textColor="@color/color_ED5452"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x10"
                android:background="@color/color_F5F5F5"/>
            <!--服务数量-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="horizontal"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/service_number"
                        android:textColor="@color/color_333333" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="退款金额："
                            android:textColor="@color/color_999999"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/pending_refund_after_tv_refund_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            tools:text="¥0.00"
                            android:textColor="@color/color_ED5452"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/shape_add_bg"
                        android:gravity="center"
                        android:text="-"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/pending_refund_after_tv_service_number"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="8dp"
                        android:background="@color/color_F7F7F7"
                        android:gravity="center"
                        android:text="1" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/shape_add_bg"
                        android:gravity="center"
                        android:text="+"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x10"
                android:background="@color/color_F5F5F5"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:padding="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/refund_explain"
                    android:textColor="@color/color_333333" />
                <TextView
                    android:id="@+id/pending_refund_after_tv_refund_explain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="买错了，买重了"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp"
                    android:layout_toLeftOf="@+id/pending_refund_after_iv_right_arrow"
                    android:layout_marginRight="@dimen/x10"
                    />
                <ImageView
                    android:id="@+id/pending_refund_after_iv_right_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_arrow"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x10"
                android:background="@color/color_F5F5F5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款说明："
                    android:textColor="@color/color_333333" />

                <TextView
                    android:id="@+id/pending_refund_after_tv_refund_explain_optional"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:text="选填"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x10"
                android:background="@color/color_F5F5F5"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/pending_refund_after_ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/pending_refund_after_tv_agree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@color/color_ED5452"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="确认退款"
            android:textColor="@color/color_white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pending_refund_after_tv_disagree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="拒绝退款"
            android:textColor="@color/color_333333"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>