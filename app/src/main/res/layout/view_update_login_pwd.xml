<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_old_login_pwd"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x15"
            android:gravity="left|center_vertical"
            android:text="@string/old_pwd"
            android:textColor="@color/color_222222" />

        <com.yst.onecity.view.ContainsEmojiEditText
            android:id="@+id/et_old_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_old_login_pwd"
            android:background="@color/white"
            android:inputType="textPassword"
            android:hint="@string/old_pwd_str"
            android:paddingLeft="@dimen/x10"
            android:textColor="@color/color_222222"
            android:textColorHint="@color/color_666666"
            android:textSize="@dimen/textsize_12" />
    </RelativeLayout>

    <include layout="@layout/line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_new_login_pwd"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x15"
            android:gravity="left|center_vertical"
            android:text="@string/new_pwd"
            android:textColor="@color/color_222222" />

        <com.yst.onecity.view.ContainsEmojiEditText
            android:id="@+id/et_new_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_new_login_pwd"
            android:background="@color/white"
            android:inputType="textPassword"
            android:hint="@string/new_pwd_str"
            android:paddingLeft="@dimen/x10"
            android:textColor="@color/color_222222"
            android:textColorHint="@color/color_666666"
            android:textSize="@dimen/textsize_12" />
    </RelativeLayout>

    <include layout="@layout/line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_sure_new_login_pwd"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x15"
            android:gravity="left|center_vertical"
            android:text="@string/sure_pwd"
            android:textColor="@color/color_222222" />

        <com.yst.onecity.view.ContainsEmojiEditText
            android:id="@+id/et_sure_new_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_sure_new_login_pwd"
            android:background="@color/white"
            android:inputType="textPassword"
            android:hint="@string/new_pwd_str"
            android:paddingLeft="@dimen/x10"
            android:textColor="@color/color_222222"
            android:textColorHint="@color/color_666666"
            android:textSize="@dimen/textsize_12" />
    </RelativeLayout>

    <include layout="@layout/line" />
</LinearLayout>