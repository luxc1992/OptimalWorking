<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F3F3F3"
    >
    <include
        android:id="@+id/editVideo_include"
        layout="@layout/main_title" />

    <EditText
        android:id="@+id/editVideo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/editVideo_include"
        android:hint="@string/input_video_title"
        android:padding="@dimen/x15"
        android:textSize="@dimen/textsize_16"
        android:layout_marginTop="@dimen/x10"
        android:inputType="text"
        android:maxLines="1"
        />
    <RelativeLayout
        android:id="@+id/editVideo_rl_video"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x200"
        android:layout_below="@+id/editVideo_title"
        android:padding="15dp">
        <FrameLayout
            android:id="@+id/edit_video_frameLayoutVideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <ImageView
            android:id="@+id/edit_video_imageViewVideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/videoplayimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/jc_play_normal" />
    </RelativeLayout>
    <!--是否添加产品计划-->
    <RelativeLayout
        android:id="@+id/editVideo_rl_add_product_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/x10"
        android:layout_below="@+id/editVideo_rl_video"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/is_add_product_plan"
            android:textSize="@dimen/textsize_18"
            android:padding="@dimen/x10"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="@string/plus_sign"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/color_5A5A5A"
            android:textSize="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x10"
            />
    </RelativeLayout>
    <!--产品计划回显-->
    <RelativeLayout
        android:id="@+id/editVideo_rl_add_product_plan2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_EEEEEE"
        android:paddingTop="@dimen/x10"
        android:paddingBottom="@dimen/x10"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/x10"
        android:layout_below="@+id/editVideo_rl_video"
        >
        <ImageView
            android:id="@+id/editVideo_ll_number"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_marginLeft="@dimen/x15"
            android:layout_centerVertical="true"
            android:background="@mipmap/logo"
            />
        <TextView
            android:id="@+id/editVideo_tv_product_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/editVideo_ll_number"
            android:layout_marginLeft="@dimen/x20"
            android:textSize="@dimen/textsize_18"
            />
    </RelativeLayout>
</RelativeLayout>
