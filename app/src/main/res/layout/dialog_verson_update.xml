<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:background="@drawable/dialog_update_verison_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/x15"
            >

            <TextView
                android:id="@+id/dialog_hint_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="left"
                android:text="温馨提示"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="@dimen/x18"
                />

            <TextView
                android:id="@+id/txt_msg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/dialog_hint_title"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/x16"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_DDDDDD" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llayout_dialog_cancle"
                android:layout_width="@dimen/x150"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/txt_dialog_cancle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/color_ED5452"
                    android:textSize="@dimen/x15" />
            </LinearLayout>
            <View
                android:id="@+id/view_line"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/color_DDDDDD" />
            <RelativeLayout
                android:id="@+id/rel_dialog_ok"
                android:layout_width="@dimen/x150"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/txt_dialog_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="确认"
                    android:textColor="@color/color_ED5452"
                    android:textSize="@dimen/x15" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>