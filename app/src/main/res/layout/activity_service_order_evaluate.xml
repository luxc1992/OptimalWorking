<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include
        android:id="@+id/service_order_evaluate_title"
        layout="@layout/main_title" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/service_order_evaluate_title"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/x10"
                android:background="@color/white"
                android:layout_marginTop="@dimen/x1"
                >
                <ImageView
                    android:id="@+id/service_order_evaluate_iv_head"
                    android:layout_width="@dimen/x70"
                    android:layout_height="@dimen/x70"
                    tools:src="@mipmap/headimage"
                    />
                <ImageView
                    android:id="@+id/service_order_evaluate_iv_arrow"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_toRightOf="@+id/service_order_evaluate_iv_head"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginTop="@dimen/x5"
                    android:src="@mipmap/ic_service"
                    />
                <TextView
                    android:id="@+id/service_order_evaluate_tv_service_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="上门打扫"
                    android:layout_toRightOf="@+id/service_order_evaluate_iv_arrow"
                    android:layout_marginTop="@dimen/x5"
                    android:layout_marginLeft="@dimen/x5"
                    android:textColor="@color/color_333333"
                    />
                <TextView
                    android:id="@+id/service_order_evaluate_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="¥120.00"
                    android:textColor="@color/color_333333"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/x5"
                    />
                <TextView
                    android:id="@+id/service_order_evaluate_tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="x1"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/x45"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_white"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <com.yst.onecity.view.RatingBar
                    android:id="@+id/service_order_evaluate_ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    app:starCount="5"
                    app:starEmpty="@mipmap/comments_img_star_n"
                    app:starFill="@mipmap/comments_img_star_s"
                    app:starImageSize="30dp"
                    app:starPadding="15dp"
                    app:stepSize="Full">
                </com.yst.onecity.view.RatingBar>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:padding="15dp">

                <com.yst.onecity.view.ContainsEmojiEditText
                    android:id="@+id/service_order_evaluate_et_comment"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@null"
                    android:gravity="left"
                    android:maxLength="120"
                    android:hint="本商品如何，服务怎样，描述一下吧..."
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_999999"
                    android:textSize="15sp" />

                <com.yst.onecity.view.MyGridView
                    android:id="@+id/service_order_evaluate_griView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="10dp"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="4"
                    android:scrollbars="none"
                    android:verticalSpacing="10dp">
                </com.yst.onecity.view.MyGridView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp">

                <CheckBox
                    android:id="@+id/service_order_evaluate_cb_anonymity"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/selector_evalute"
                    android:button="@null" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="@string/anonymous_evaluation" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/anonymous_evaluation_hint"
                    android:textColor="@color/color_999999" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/service_order_evaluate_tv_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_EE8382"
        android:enabled="false"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="@string/confirm"
        android:textColor="@color/color_white"
        android:textSize="16sp"
        />
</RelativeLayout>