<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/select_product_tv"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_product_bg">
            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space5"
                android:src="@mipmap/home_product" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space5"
                android:layout_toRightOf="@+id/image"
                android:text="从商品库中选取商品"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_16" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space5"
                android:src="@mipmap/right_product" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/space20"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_product_bg"
                android:paddingBottom="@dimen/space10"
                android:paddingLeft="@dimen/space25"
                android:paddingRight="@dimen/space25"
                android:paddingTop="@dimen/space10"
                android:text="取消操作"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_15" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>