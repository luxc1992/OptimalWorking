<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    >

    <com.yst.basic.framework.view.roundedimageview.RoundedImageView
        android:id="@+id/iv_item_hudong_question_head"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher"
        app:oval="true"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_item_hudong_question_head"
        >
        <LinearLayout
            android:id="@+id/ll_item_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/txt_item_hudong_question_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_121212"
                android:textSize="18sp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:src="@mipmap/hudong_dianzan"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_item_hudong_question_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text=""
            android:textColor="@color/color_9A9A9A"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_item_hudong_question_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_item_hudong_question_head"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_item_hudong_question_head"
        android:text=""
        android:textColor="@color/color_121212"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/txt_item_hudong_question_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_item_hudong_question_title"
        android:layout_below="@id/txt_item_hudong_question_title"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="15dp"
        android:text=""
        android:textColor="@color/color_9A9A9A"
        android:textSize="13sp"
        />

</RelativeLayout>