<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space230"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/space354"
        android:layout_height="@dimen/space230"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/iv_new_red"
            android:layout_width="@dimen/space300"
            android:layout_height="@dimen/space220"
            android:src="@mipmap/red_package"
            android:layout_alignParentBottom="true"
            />

        <TextView
            android:id="@+id/tv_get_red_package"
            android:layout_width="@dimen/space110"
            android:layout_height="@dimen/space32"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space150" />

        <TextView
            android:id="@+id/tv_close_red_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/red_package_close"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            />
    </RelativeLayout>
</RelativeLayout>
