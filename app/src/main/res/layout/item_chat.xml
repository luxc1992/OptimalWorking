<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWrite"
    >

    <com.yst.basic.framework.view.roundedimageview.RoundedImageView
        android:id="@+id/iv_item_chat_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        app:oval="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="13dp"
        />
    <TextView
        android:id="@+id/txt_item_chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="富商大贾"
        android:layout_toRightOf="@id/iv_item_chat_head"
        android:textColor="@color/color_121212"
        android:layout_alignTop="@id/iv_item_chat_head"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:id="@+id/txt_item_chat_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="职业西装新郎伴郎礼服有货吗？"
        android:textSize="13sp"
        android:layout_toRightOf="@id/iv_item_chat_head"
        android:textColor="@color/color_9A9A9A"
        android:layout_alignBottom="@id/iv_item_chat_head"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:id="@+id/txt_item_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:13"
        android:textColor="@color/color_9A9A9A"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="13dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_DDDDDD"
        android:layout_below="@id/txt_item_chat_content"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>