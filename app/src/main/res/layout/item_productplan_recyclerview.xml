<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x90"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/shape_classfiy_bag"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_recyview"
            android:layout_width="@dimen/x90"
            android:layout_height="match_parent"
            android:padding="@dimen/x2"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_DDDDDD" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x12"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_recyview_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="@dimen/x8"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=" 德国进口草莓"
                android:textColor="@color/color_333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_recyview_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginRight="@dimen/x11"
                android:layout_weight="2"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="德国进口草莓德国进口草莓德国进口草莓德国进口草莓德国进口草莓德国进口草莓 德国进口草莓"
                android:textColor="@color/color_999999"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/x8"
                android:layout_marginRight="@dimen/x11"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_recyview_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:text="¥123"
                    android:textColor="@color/color_ED5452"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>