<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/my_service_order_smart_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ExpandableListView
            android:id="@+id/my_service_order_expandableListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/color_FAFAFA"
            android:groupIndicator="@null"
            android:scrollbars="none">
        </ExpandableListView>

        <LinearLayout
            android:id="@+id/my_service_order_ll_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/my_service_order_iv_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/empy_dingdan"/>
            <TextView
                android:id="@+id/my_service_order_tv_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawablePadding="20dp"
                android:gravity="center"
                android:paddingTop="30dp"
                android:text="@string/no_order"
                android:textColor="@color/color_666666" />
        </LinearLayout>
        </LinearLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>