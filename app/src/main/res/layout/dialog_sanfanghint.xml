<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="265dp"
    android:layout_height="165dp"
    android:background="@drawable/shape_solid_white">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x15"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="该手机号以绑定已下账号"
        android:textColor="@color/color_333333"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="@dimen/x45"
        android:layout_marginRight="@dimen/x45"
        android:orientation="horizontal"
        android:paddingTop="@dimen/x10">

        <LinearLayout
            android:id="@+id/wechat_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wechat_03" />

            <TextView
                android:id="@+id/wechat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="@dimen/x5"/>
        </LinearLayout>

        <LinearLayout

            android:id="@+id/qq_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/qq_03" />

            <TextView
                android:id="@+id/qq_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="@dimen/x5"
                android:text="" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/sure"
        android:background="@color/color_DDDDDD" />


    <Button
        android:id="@+id/sure"
        android:layout_width="match_parent"
        android:layout_height="44.5dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/color_FF4852"
        android:textSize="17sp" />

</RelativeLayout>