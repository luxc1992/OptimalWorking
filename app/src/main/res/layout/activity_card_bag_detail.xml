<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F2F2F2"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    tools:context="com.yst.onecity.activity.mine.cardbag.CardBagDetailActivity">

    <include layout="@layout/main_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x8"
            android:layout_marginRight="@dimen/x8"
            android:layout_marginTop="@dimen/x14"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rel_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x168"
                android:background="@color/color_F2F2F2">

                <TextView
                    android:id="@+id/tv_card_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/x50"
                    android:gravity="center_horizontal"
                    android:text="次数卡（高端尊享卡）"
                    android:textColor="@color/color_C58B56"
                    android:textSize="@dimen/textsize_18" />

                <TextView
                    android:id="@+id/tv_card_time"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x26"
                    android:layout_below="@+id/tv_card_name"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/x15"
                    android:background="@drawable/shape_cradbag_time_bg"
                    android:paddingBottom="@dimen/x5"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x20"
                    android:paddingTop="@dimen/x5"
                    android:text="已使用 : 22／350 (次)"
                    android:textColor="@color/color_C58B56"
                    android:textSize="@dimen/textsize_12" />

                <TextView
                    android:id="@+id/tv_card_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_card_time"
                    android:layout_marginTop="@dimen/x28"
                    android:gravity="center_horizontal"
                    android:text="有效期限 : 2018-09-09至2019-09-08"
                    android:textColor="@color/color_CECECE"
                    android:textSize="@dimen/textsize_11" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_card_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/x40"
                    android:background="@drawable/shape_add_bg"
                    android:paddingBottom="@dimen/x17"
                    android:paddingLeft="@dimen/x60"
                    android:paddingRight="@dimen/x60"
                    android:paddingTop="@dimen/x17"
                    android:text="验证码：2334 2234 34"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/textsize_14" />

                <ImageView
                    android:id="@+id/img_card_zxing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x10"
                    android:gravity="center"
                    android:text="@string/card_zxing"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/textsize_12" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x20"
                    android:layout_marginTop="@dimen/x20"
                    android:scaleType="fitXY"
                    android:src="@mipmap/xian" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x12"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/x3"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x18"
                        android:background="@color/color_B98451" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x5"
                        android:text="打卡记录:"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/textsize_15" />

                </LinearLayout>

                <com.yst.onecity.view.MyListView
                    android:id="@+id/lv_card_record"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x18"
                    android:layout_marginRight="@dimen/x18"
                    android:divider="@color/color_EBEBEB"
                    android:dividerHeight="@dimen/x1" />

                <TextView
                    android:id="@+id/tv_record_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x15"
                    android:layout_marginTop="@dimen/x20"
                    android:gravity="center"
                    android:text="@string/bunter_more"
                    android:textColor="@color/color_C58B56"
                    android:textSize="@dimen/textsize_13" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x20"
                    android:scaleType="fitXY"
                    android:src="@mipmap/xian" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x12"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/x3"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x18"
                        android:background="@color/color_B98451" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x5"
                        android:text="可用团队:"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/textsize_15" />

                </LinearLayout>

                <com.yst.onecity.view.MyListView
                    android:id="@+id/lv_card_team"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x18"
                    android:layout_marginRight="@dimen/x18"
                    android:divider="@color/color_EBEBEB"
                    android:dividerHeight="@dimen/x1" />

                <TextView
                    android:id="@+id/tv_team_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x15"
                    android:layout_marginTop="@dimen/x20"
                    android:gravity="center"
                    android:paddingBottom="@dimen/x20"
                    android:text="@string/bunter_more"
                    android:textColor="@color/color_C58B56"
                    android:textSize="@dimen/textsize_13" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
