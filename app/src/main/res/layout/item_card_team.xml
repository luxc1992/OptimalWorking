<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="@dimen/x15">

        <com.yst.basic.framework.view.roundedimageview.RoundedImageView
            android:id="@+id/img_relation_team"
            android:layout_width="@dimen/x110"
            android:layout_height="@dimen/x80"
            android:scaleType="centerCrop"
            android:src="@mipmap/list_bg"
            app:corner_radius="@dimen/x10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:oval="false" />

        <TextView
            android:id="@+id/tv_relation_team_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space15"
            android:text="博洛尼健身"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/textsize_13"
            app:layout_constraintLeft_toRightOf="@+id/img_relation_team"
            app:layout_constraintTop_toTopOf="@+id/img_relation_team" />

        <TextView
            android:id="@+id/tv_relation_team"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/x20"
            android:background="@drawable/shape_card_server_bg"
            android:paddingBottom="@dimen/x7"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:paddingTop="@dimen/x7"
            android:text="联系团队"
            android:textColor="@color/color_C58B56"
            android:textSize="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_relation_team" />

        <com.yst.onecity.view.RatingBar
            android:id="@+id/star_relation_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/space5"
            android:isIndicator="true"
            app:layout_constraintLeft_toLeftOf="@+id/tv_relation_team_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_relation_team_name"
            app:starCount="5"
            app:starEmpty="@mipmap/comments_img_star_n"
            app:starFill="@mipmap/comments_img_star_s"
            app:starImageSize="10dp"
            app:starPadding="3dp"
            app:stepSize="Full" />

        <TextView
            android:id="@+id/tv_relation_team_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-15dp"
            android:layout_marginRight="@dimen/space10"
            android:layout_marginTop="33dp"
            android:drawableLeft="@mipmap/weizhi"
            android:drawablePadding="@dimen/x2"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="北京市朝阳区大悦城六楼新天地"
            android:textColor="@color/color_999999"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_relation_team_name"
            app:layout_constraintRight_toLeftOf="@+id/tv_contact_team"
            app:layout_constraintTop_toBottomOf="@+id/star_relation_team" />


    </android.support.constraint.ConstraintLayout>
</LinearLayout>