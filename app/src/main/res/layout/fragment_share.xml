<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x25"
        android:background="@color/color_DDDDDD"/>

    <com.yst.onecity.view.viewpagerindicator.ViewPagerIndicator
        android:id="@+id/indicator_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space40"
        android:layout_marginLeft="@dimen/space50"
        android:layout_marginRight="@dimen/space50"
        android:background="@color/white" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F1F1F1"></android.support.v4.view.ViewPager>
</LinearLayout>