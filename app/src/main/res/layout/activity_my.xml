<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_F2F2F2"
    >
    <include layout="@layout/main_title" />

    <RelativeLayout
        android:id="@+id/layout_mine_head"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_marginTop="8dp"
        android:layout_height="160dp"
        >

        <TextView
            android:id="@+id/txt_my_txxtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:textSize="13dp" />

        <com.yst.basic.framework.view.roundedimageview.RoundedImageView
            android:id="@+id/image_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/ic_logo"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_serve"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_marginTop="1dp"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/txt_my_txtview"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/my"
            android:textColor="@color/color_333333" />


        <TextView
            android:id="@+id/txt_telphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:text="@string/about_us_tel" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/color_F7F7F7"
        android:layout_height="2dp"/>
</LinearLayout>
