<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.yst.onecity.activity.VersionUpdateActivity">

    <include layout="@layout/main_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x150"
        android:background="@color/color_F9F9F9"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:layout_gravity="center"
            android:src="@mipmap/update" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_DDDDDD" />

    <TextView
        android:id="@+id/tv_check_version"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:drawableRight="@mipmap/nav_icon_next"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x15"
        android:paddingRight="@dimen/x15"
        android:text="@string/check_new_verison" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_DDDDDD" />

    <TextView
        android:id="@+id/tv_version_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x15"
        android:paddingLeft="@dimen/x15"
        android:textColor="@color/color_222222" />
    <TextView
        android:id="@+id/tv_new_version_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x15"
        android:textColor="@color/color_222222"
        android:paddingTop="@dimen/x5"
        />
    <TextView
        android:id="@+id/tv_version_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x15"
        android:paddingTop="@dimen/x5"
        />
<LinearLayout
    android:id="@+id/tv_version_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/x15"
    android:layout_marginRight="@dimen/x15"
    android:layout_marginTop="@dimen/x10"
    android:orientation="vertical"
    >
</LinearLayout>
</LinearLayout>
