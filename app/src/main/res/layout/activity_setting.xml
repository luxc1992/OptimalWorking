<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.yst.onecity.activity.mine.setting.SettingActivity">

    <include layout="@layout/main_title" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include layout="@layout/line" />

        <TextView
            android:id="@+id/tv_person_info"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:drawableEnd="@mipmap/nav_icon_next"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/set_person_info"
            android:textColor="@color/color_222222" />

        <include layout="@layout/line" />

        <TextView
            android:id="@+id/tv_recieve_address"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:drawableEnd="@mipmap/nav_icon_next"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/set_address"
            android:textColor="@color/color_222222" />

        <include layout="@layout/line" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/txt_bind_wechat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:text="@string/safe_bind_wechat"
                android:textColor="@color/color_222222" />

            <TextView
                android:id="@+id/tv_wechat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/iv_bind_wechat"
                android:layout_toRightOf="@+id/txt_bind_wechat"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:textColor="#999999" />

            <ImageView
                android:id="@+id/iv_bind_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/close2" />
        </RelativeLayout>

        <include layout="@layout/line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/txt_bind_qq"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:text="@string/safe_bind_qq"
                android:textColor="@color/color_222222" />

            <TextView
                android:id="@+id/tv_qq"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/iv_bind_qq"
                android:layout_toRightOf="@+id/txt_bind_qq"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:textColor="#999999" />

            <ImageView
                android:id="@+id/iv_bind_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/close2" />
        </RelativeLayout>

        <include layout="@layout/line" />

        <TextView
            android:id="@+id/tv_update_login_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:drawableEnd="@mipmap/nav_icon_next"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/update_login_password"
            android:textColor="@color/color_222222"
            android:visibility="visible" />

        <include layout="@layout/line" />

        <TextView
            android:id="@+id/tv_update_trade_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:background="@color/white"
            android:drawableEnd="@mipmap/nav_icon_next"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/update_trade_password"
            android:textColor="@color/color_222222"
            android:visibility="visible" />

        <include layout="@layout/line" />


        <TextView
            android:id="@+id/tv_authentication_state"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:background="@color/white"
            android:drawableEnd="@mipmap/nav_icon_next"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/safe_identity_authentication"
            android:textColor="@color/color_222222"
            android:visibility="visible" />

        <include layout="@layout/line" />

        <TextView
            android:id="@+id/tv_feed_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:background="@color/white"
            android:drawableEnd="@mipmap/nav_icon_next"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/set_feed_back"
            android:textColor="@color/color_222222" />

        <include layout="@layout/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/set_clear_catch"
                android:textColor="@color/color_222222" />

            <TextView
                android:id="@+id/tv_clear_catch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="8dp"
                android:drawableRight="@mipmap/nav_icon_next"
                android:gravity="center_vertical"
                android:text="0M" />
        </LinearLayout>

        <include layout="@layout/line" />

        <TextView
            android:id="@+id/tv_about_our"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:background="@color/white"
            android:drawableEnd="@mipmap/nav_icon_next"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/about_our"
            android:textColor="@color/color_222222" />

        <include layout="@layout/line" />

        <TextView
            android:id="@+id/tv_version_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:background="@color/white"
            android:drawableEnd="@mipmap/nav_icon_next"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/set_version_update"
            android:textColor="@color/color_222222" />

        <include layout="@layout/line" />

        <TextView
            android:id="@+id/txt_logout_textview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:layout_marginBottom="@dimen/x30"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/shape_main_btm_clickble"
            android:gravity="center"
            android:text="@string/set_logout"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
</LinearLayout>
