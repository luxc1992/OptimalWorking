<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_validcard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x125">

        <TextView
            android:id="@+id/card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:text="周期卡"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_18" />


        <TextView
            android:id="@+id/card_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/card_name"
            android:layout_alignStart="@+id/card_name"
            android:layout_below="@+id/card_name"
            android:layout_marginTop="@dimen/x7"
            android:text="（7天内）"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_13" />

        <TextView
            android:id="@+id/card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x15"
            android:layout_marginTop="@dimen/x10"
            android:text="有效日期：20180411-20180417"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_12"
            android:visibility="gone" />

        <TextView
            android:id="@+id/card_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="@dimen/x20"
            android:text="注：仅限本人使用，每天限用一位商家"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_12" />

        <ImageView
            android:layout_width="@dimen/x65"
            android:layout_height="@dimen/x65"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x4"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x10"
            android:src="@mipmap/default_product_icon"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/rel_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x15"
            android:layout_marginTop="@dimen/x10"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="@dimen/x10"
                android:layout_height="@dimen/x12"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="¥"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_12" />

            <TextView
                android:id="@+id/tv_price_validcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/textView7"
                android:layout_toStartOf="@+id/textView7"
                android:gravity="right|bottom"
                android:text="50"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_30" />
        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>