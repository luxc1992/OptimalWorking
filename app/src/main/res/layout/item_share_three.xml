<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <CheckBox
            android:id="@+id/cb_item_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@null"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:visibility="visible"
            android:background="@drawable/selector_register_checkbox"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/shape_list_5"
            >

            <TextView
                android:id="@+id/txt_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="家具这样装修才好看啊"
                android:textColor="@color/color_222222"
                android:textSize="17sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/txt_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ABCZ专业幼教机构，利用孩子们一个周期的幼教学习，引起宝宝们的兴趣。"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >
                <ImageView
                    android:id="@+id/iv_pic1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@mipmap/fyj"
                    android:scaleType="centerCrop"
                    />
                <ImageView
                    android:id="@+id/iv_pic2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@mipmap/fyj"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="5dp"
                    />
                <ImageView
                    android:id="@+id/iv_pic3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@mipmap/fyj"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >
                <com.yst.onecity.view.CustomTextView
                    android:id="@+id/txt_item_fenxiang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="3902"
                    android:textColor="@color/color_777777"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/fenxiang"
                    android:drawablePadding="6dp"
                    />
                <com.yst.onecity.view.CustomTextView
                    android:id="@+id/txt_item_pinglun"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="7287"
                    android:textColor="@color/color_777777"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/pinglun2"
                    android:drawablePadding="6dp"
                    />
                <com.yst.onecity.view.CustomTextView
                    android:id="@+id/txt_item_dianzan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="28798"
                    android:textColor="@color/color_777777"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/dianzan"
                    android:drawablePadding="6dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>