<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_EEEEEE"
    >
    <include layout="@layout/main_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:background="@color/colorWhite"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="16sp"
            android:textColor="@color/color_6B6B6B"
            android:layout_marginStart="13dp"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:id="@+id/et_add_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="16dp"
            android:hint="输入收货人姓名"
            android:textSize="14sp"
            android:textColorHint="@color/color_B9B9B9"
            android:textColor="@color/color_353535"
            android:background="@null"
            android:maxLength="25"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="@color/colorWhite"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码"
            android:textSize="16sp"
            android:textColor="@color/color_6B6B6B"
            android:layout_marginStart="13dp"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:id="@+id/et_add_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="16dp"
            android:hint="输入手机号码"
            android:textSize="14sp"
            android:textColorHint="@color/color_B9B9B9"
            android:textColor="@color/color_353535"
            android:background="@null"
            android:inputType="number"
            android:maxLength="11"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_add_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorWhite"
        >
        <TextView
            android:id="@+id/txt_add_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在区域"
            android:textSize="16sp"
            android:textColor="@color/color_6B6B6B"
            android:layout_marginStart="13dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/txt_add_address"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="选择所在省份、城市、县区"
            android:textSize="14sp"
            android:textColor="@color/color_B9B9B9"
            android:layout_marginStart="22dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/txt_add_no"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="17dp"
            android:src="@mipmap/edit_right"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="@color/colorWhite"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细地址"
            android:textSize="16sp"
            android:textColor="@color/color_6B6B6B"
            android:layout_marginStart="13dp"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:id="@+id/et_add_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="16dp"
            android:hint="街道、楼牌号等详细地址"
            android:textSize="14sp"
            android:textColorHint="@color/color_B9B9B9"
            android:textColor="@color/color_353535"
            android:background="@null"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:maxLength="200"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="@color/colorWhite"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮政编码"
            android:textSize="16sp"
            android:textColor="@color/color_6B6B6B"
            android:layout_marginStart="13dp"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:id="@+id/et_add_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="16dp"
            android:hint="输入邮政编码"
            android:textSize="14sp"
            android:textColorHint="@color/color_B9B9B9"
            android:textColor="@color/color_353535"
            android:background="@null"
            android:inputType="number"
            android:maxLength="6"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_default"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="13dp"
            android:text="设为默认收货地址"
            android:textColor="@color/color_6B6B6B"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cb_add_default"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:checked="true"
            android:background="@drawable/selector_am_checkbox"
            android:button="@null" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_add_delete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@mipmap/edit_delete"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除地址"
            android:textSize="15sp"
            android:textColor="@color/color_ED5452"
            android:layout_marginStart="10dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/txt_add_save"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="保存"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="@drawable/shape_project_sure"
            />
    </RelativeLayout>
</LinearLayout>
