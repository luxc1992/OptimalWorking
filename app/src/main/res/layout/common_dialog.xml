<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_solid_white">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text=""
        android:textColor="@color/color_333333"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        android:layout_below="@+id/title"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text=""
        android:textColor="@color/color_333333"
        android:textSize="14dp" />

    <com.yst.onecity.view.ContainsEmojiEditText
        android:id="@+id/edit_text"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        android:layout_marginLeft="@dimen/x45"
        android:layout_marginRight="@dimen/x45"
        android:paddingLeft="@dimen/x10"
        android:textColorHint="@color/color_999999"
        android:textColor="@color/color_222222"
        android:hint="1~10个字"
        android:background="@drawable/shape_gray_frame"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/ll_button"
        android:background="@color/color_DDDDDD" />

    <LinearLayout
        android:id="@+id/ll_button"
        android:layout_width="match_parent"
        android:layout_height="44.5dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44.5dp"
            android:background="@null"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_ED5452"
            android:textSize="17sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_DDDDDD"/>

        <TextView
            android:id="@+id/sure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44.5dp"
            android:background="@null"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/color_ED5452"
            android:textSize="17sp" />
    </LinearLayout>

</RelativeLayout>