<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/main_title" />

    <include layout="@layout/line" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:background="@color/white"
        android:drawableLeft="@mipmap/ic_phone"
        android:drawablePadding="@dimen/x15"
        android:hint="@string/please_input_phone_num"
        android:inputType="number"
        android:paddingLeft="@dimen/x5"
        android:textSize="@dimen/textsize_14" />

    <include layout="@layout/line_15" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:layout_marginLeft="@dimen/x15">

        <TextView
            android:id="@+id/btn_get_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="@dimen/x15"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_get_verification_code"
            android:gravity="center"
            android:paddingLeft="@dimen/x15"
            android:paddingRight="@dimen/x15"
            android:text="获取验证码"
            android:textColor="#FF5424" />

        <EditText
            android:id="@+id/et_verification"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x10"
            android:layout_toLeftOf="@id/btn_get_verification_code"
            android:background="@color/white"
            android:drawableLeft="@mipmap/ic_code"
            android:drawablePadding="@dimen/x15"
            android:hint="@string/please_input_verification_code"
            android:inputType="number"
            android:paddingLeft="@dimen/x5"
            android:textSize="@dimen/textsize_14" />
    </RelativeLayout>

    <include layout="@layout/line_15" />

    <TextView
        android:id="@+id/bind_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_margin="@dimen/x15"
        android:background="@drawable/shape_fetchcash_bt_bg_false"
        android:gravity="center"
        android:text="绑定"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_16" />
</LinearLayout>