<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llayout_password_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llayout_password_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp">

                <!-- 取消按钮 -->
                <ImageView
                    android:id="@+id/img_cancel"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/ahn"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgUserHead"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/default_nor_avatar"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="请输入验证码"
                    android:textColor="#333333"
                    android:textSize="18sp" />

            </LinearLayout>

            <!-- 6位密码框布局，需要一个圆角边框的shape作为layout的背景 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/psw_input_area_bg"
                android:orientation="horizontal">

                <!-- inputType设置隐藏密码明文
                     textSize设置大一点，否则“点”太小了，不美观 -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_pass1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:inputType="numberPassword"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="20sp" />


                    <ImageView
                        android:id="@+id/img_pass1"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center"
                        android:src="@drawable/img_psw_bg"
                        android:visibility="invisible" />

                </FrameLayout>

                <View
                    android:layout_width="0.66dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.66dp"
                    android:layout_marginTop="0.66dp"
                    android:background="#eeeeee" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_pass2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:inputType="numberPassword"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="20sp" />


                    <ImageView
                        android:id="@+id/img_pass2"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center"
                        android:src="@drawable/img_psw_bg"
                        android:visibility="invisible" />

                </FrameLayout>


                <View
                    android:layout_width="0.66dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.66dp"
                    android:layout_marginTop="0.66dp"
                    android:background="#eeeeee" />


                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <ImageView
                        android:id="@+id/img_pass3"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center"
                        android:src="@drawable/img_psw_bg"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tv_pass3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:inputType="numberPassword"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="20sp" />

                </FrameLayout>

                <View
                    android:layout_width="0.66dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.66dp"
                    android:layout_marginTop="0.66dp"
                    android:background="#eeeeee" />


                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_pass4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:inputType="numberPassword"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="20sp" />


                    <ImageView
                        android:id="@+id/img_pass4"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center"
                        android:src="@drawable/img_psw_bg"
                        android:visibility="invisible" />

                </FrameLayout>

                <View
                    android:layout_width="0.66dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.66dp"
                    android:layout_marginTop="0.66dp"
                    android:background="#eeeeee" />


                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_pass5"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:gravity="center"
                        android:inputType="numberPassword"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="20sp" />


                    <ImageView
                        android:id="@+id/img_pass5"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center"
                        android:src="@drawable/img_psw_bg"
                        android:visibility="invisible" />

                </FrameLayout>

                <View
                    android:layout_width="0.66dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.66dp"
                    android:layout_marginTop="0.66dp"
                    android:background="#eeeeee" />


                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_pass6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:inputType="numberPassword"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="20sp" />


                    <ImageView
                        android:id="@+id/img_pass6"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center"
                        android:src="@drawable/img_psw_bg"
                        android:visibility="invisible" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

        <com.yst.basic.framework.view.VirtualKeyboardView
            android:id="@+id/virtualKeyboardView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="bottom" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_password_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/llayout_password_bottom" />

</RelativeLayout>